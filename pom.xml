        <aliyun.oss.version>2.8.3</aliyun.oss.version>
        <qcloud.cos.version>4.4</qcloud.cos.version>
        <swagger.knife4j.version>3.0.3</swagger.knife4j.version>
        <joda.time.version>2.12.1</joda.time.version>
        <gson.version>2.10</gson.version>
        <fastjson.version>2.0.18</fastjson.version>
        <flyway.version>5.2.4</flyway.version>
        <hutool.version>5.8.9</hutool.version>
        <lombok.version>1.18.24</lombok.version>
        <weixin-java.version>3.6.0</weixin-java.version>
        <log4j2.version>2.17.0</log4j2.version>
        <!--经纬度计算-->
        <geodesy.version>1.1.3</geodesy.version>
        <!--wagon plugin 配置-->
        <pack.name>${project.artifactId}.jar</pack.name>
    </properties>
    <profiles>
        <profile>
            <!-- 测试环境 -->
            <id>test</id>
            <properties>
                <server.id>clkj-test</server.id>
                <server.user>root</server.user>
                <server.password>root</server.password>
                <server.ip>0.0.0.0:22</server.ip>
                <server.path>/server/clkj</server.path>
                <active>test</active>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <!-- 正式环境 -->
            <id>prod</id>
            <properties>
                <server.id>clkj-prod</server.id>
                <server.user>ubuntu</server.user>
                <server.password>root</server.password>
                <server.ip>0.0.0.0:22</server.ip>
                <server.path>/server/clkj</server.path>
                <active>prod</active>
            </properties>
        </profile>
    </profiles>
